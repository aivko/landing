  body
    header.header.layout
      a(href="https://dsp.epom.com/")
        img.header__logo(src="img/global/epom-logo.svg" alt="EPOM logo")

    main.main-content.layout
      section.page-section.page-section--intro
        .page-section__column.page-section__column--form.wow.fadeInLeft(data-wow-duration=".6s" data-wow-delay=".2s" style="visibility: hidden")
          h2.section-title Sign up for Epom DSP
          p.section-description Let's get started with a few simple steps:

          form.form.form--sign-up#sign_up_form(action="" method="POST" data-parsley-validate="")
            .form__row
              input(aria-label="Full name" autocomplete="given-name" value="" name="full_name" type="text" data-parsley-trigger="change" required="" placeholder="Full name" maxlength="255")
            .form__row
              input(aria-label="Email" autocomplete="email" value="" name="email" type="email" data-parsley-trigger="change" required="" placeholder="Work email" maxlength="255")
            .form__row
              input(aria-label="Company" autocomplete="organization" name="company" type="text" data-parsley-trigger="change" required="" placeholder="Company" maxlength="255")
            .form__row
              button.submit-button(type="submit") Get Free Trial
        .page-section__column.page-section__column--features.wow.fadeInUp(data-wow-duration=".6s" data-wow-delay=".4s" style="visibility: hidden")
          .benefits
            ul.benefits-list
              li.benefit-item.wow.fadeInRight(data-wow-duration=".6s" data-wow-delay=".6s" style="visibility: hidden")
                h4.benefit-item__title Platform ownership
                p.benefit-item__description Root user access, self-serve advertiser accounts, ultimate&nbsp;customization
              li.benefit-item.wow.fadeInRight(data-wow-duration=".6s" data-wow-delay=".7s" style="visibility: hidden")
                h4.benefit-item__title Full traffic control
                p.benefit-item__description Custom SSP setup, bidstream data access, <span class="line-break">ad fraud protection.</span>
              li.benefit-item.wow.fadeInRight(data-wow-duration=".6s" data-wow-delay=".8s" style="visibility: hidden")
                h4.benefit-item__title Ad format variety
                p.benefit-item__description From display, native & video to pop-ups and interstitials.
            img.benefits-illustration.benefits-illustration--desktop(src="img/dsp-landing/fee-illustration.svg" alt="Dashboard")
            //- picture
              source(srcset="img/sign-up/sign-up-illustration-mobile.webp 1x, img/sign-up/sign-up-illustration-mobile2x.webp 2x" type="image/webp")
              source(srcset="img/sign-up/sign-up-illustration-mobile.png, img/sign-up/sign-up-illustration-mobile2x.png 2x" type="image/png")
              img.benefits-illustration.benefits-illustration--mobile(src="img/sign-up/sign-up-illustration-mobile.png" alt="benefits")

            //- picture
              source(srcset="img/sign-up/sign-up-illustration.webp 1x, img/sign-up/sign-up-illustration2x.webp 2x" type="image/webp")
              source(srcset="img/sign-up/sign-up-illustration.png, img/sign-up/sign-up-illustration2x.png 2x" type="image/png")
              img.benefits-illustration.benefits-illustration--desktop(src="img/sign-up/sign-up-illustration.png" alt="benefits")

    footer.footer.footer--transparent.layout
      .footer-wrapper
        .footer-copyright
          | 2011-<span id="copyright-year"></span> Epom, &copy; All Rights Reserved

        .footer-socials
          a(href="https://www.facebook.com/epomcom/" target="_blank").socials-icon.socials-icon--facebook
          a(href="https://www.linkedin.com/company/epom" target="_blank").socials-icon.socials-icon--linkedin
          a(href="https://www.youtube.com/channel/UCbGVIFBLS0JKdqeFJytR8cA" target="_blank").socials-icon.socials-icon--youtube
          a(href="https://twitter.com/epomadserver?lang=en" target="_blank").socials-icon.socials-icon--twitter
